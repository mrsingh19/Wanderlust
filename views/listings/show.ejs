<% layout('/layouts/boilerplate') %>

    <div class="row mt-3">
        <div class="col-8 offset-3 ">
            <h3><b>Listing Details:</b></h3>
         </div>
            <div class="listing-card col-6 offset-3 show-card">
                <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing_image" />
                <div class="card-body">
                    <p class="card-text">
                        <b>
                            <%= listing.title %>
                        </b> <br>
                        <%= listing.description %> <br>
                            <b>&#8377; <%= listing.price.toLocaleString("en-in") %> </b><br>
                                <%= listing.location %> <br>
                                    <%= listing.country %> <br>




                    </p>
                </div>
            </div>

            <br />

            <div class="btns">
                <a href="/listings/<%=listing._id%>/edit" class="btn  btn-dark  offset-3 edit-btn">Edit</a>
                
                <form method="POST" action="/listings/<%= listing._id%>?_method=DELETE">
                    <button class="btn btn-dark  offset-5">Delete</button>
                      </form>
            </div>

           


            <div class="col-6 offset-3">
                <hr>
                <h4>Leave a Review</h4>
                <form class="mb-3 needs-validation" action="/listings/<%= listing._id %>/reviews" method="POST" novalidate >
                   <div class="mb-2 mt-3">
                     <label for="rating" class="form-label">Rating</label>
                    <input type="range" min="1" max="5" name="review[rating]"value="3" class="form-range">
                   </div>
                    <div class="mb-3 mt-3">
                        <label for="comment" class="form-label">Comment</label>
                    <textarea name="review[comment]" id="comment" class="form-control" required></textarea>
                <div class="invalid-feedback">Please add some comments for review </div>   
                </div>
                    <button class="btn btn-outline-dark">Submit</button>
                </form>
                <hr>
                <p><b>All Reviews</b></p>

               <div class="row">
                 <% for(review of listing.reviews){%>
                    <div class="card col-5 ms-3 mb-3">
                        <div class="card-body">
                            <h5 class="card-title">Elon Musk</h5>
                            <p class="card-text"><%= review.comment %></p>
                            <p class="card-text"><%= review.rating %></p>
                        </div>
                        <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                            <button class="mb-3 btn btn-sm btn-dark">Delete</button>
                        </form>
                    </div>
                    <% } %>
               </div>

                
            </div>
           


          
        
    </div>